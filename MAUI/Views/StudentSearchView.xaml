<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Canvas.Views.StudentSearchView"
             Title="StudentSearchView">
    <VerticalStackLayout>
        <Label 
            Text="Students:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
    <VerticalStackLayout 
            Padding="30,0"
            Spacing="25">
            <Button
                Text="Example Student"
                Clicked="StudentSelected"
                />
            <Button
                Text="Return to Main Page"
                Clicked="ReturnToMainPage"
                />
    </VerticalStackLayout>
</ContentPage>